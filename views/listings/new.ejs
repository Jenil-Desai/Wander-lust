<%- layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3">Create A New Listing</h3>
    <form action="/listings" method="post">
      <div class="mb-3 mt-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" id="title" />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input type="text" name="listing[image]" placeholder="Enter Image URL" class="form-control" id="image" />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" id="description"></textarea>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input type="number" name="listing[price]" placeholder="Enter Price" class="form-control" id="price" />
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control" id="country" />
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control" id="location" />
      </div>
      <button type="submit" class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
  </div>
</div>
